<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <packaging>jar</packaging>

  <groupId>com.lichkin.ui</groupId>
  <artifactId>lichkin-ui</artifactId>
  <version>1.0.0.RELEASE</version>

  <parent>
    <groupId>com.lichkin.springframework.boot</groupId>
    <artifactId>lichkin-spring-boot</artifactId>
    <version>1.0.0.RELEASE</version>
  </parent>

  <name>lichkin-ui</name>
  <description>使用springboot基础封装</description>
  <url>http://codes.lichkin.com/lichkin-ui</url>
  <organization>
    <name>SuZhou LichKin Information Technology Co., Ltd.</name>
    <url>http://www.lichkin.com</url>
  </organization>
  <developers>
    <developer>
      <name>XuXin Zhuang</name>
      <email>zhuangxuxin@hotmail.com</email>
    </developer>
  </developers>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>

  <dependencies>
    <!-- lichkin starter -->
    <dependency>
      <groupId>com.lichkin.springframework.boot</groupId>
      <artifactId>lichkin-spring-boot-starter-web</artifactId>
    </dependency>
    <!-- lichkin-ui dependency webjars -->
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>jquery</artifactId>
      <version>3.3.1</version>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>jquery-mobile</artifactId>
      <version>1.4.5</version>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>font-awesome</artifactId>
      <version>5.0.13</version>
    </dependency>
    <dependency>
      <groupId>com.lichkin.ui</groupId>
      <artifactId>lichkin-ueditor</artifactId>
      <version>1.0.0.RELEASE</version>
    </dependency>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>spark-md5</artifactId>
      <version>3.0.0</version>
    </dependency>
    <dependency>
      <groupId>com.lichkin.ui</groupId>
      <artifactId>lichkin-cropper</artifactId>
      <version>1.0.0.RELEASE</version>
    </dependency>
    <dependency>
      <groupId>com.lichkin.ui</groupId>
      <artifactId>lichkin-datepicker</artifactId>
      <version>1.0.0.RELEASE</version>
    </dependency>
    <!-- https://mvnrepository.com/artifact/org.webjars/webjars-locator -->
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>webjars-locator</artifactId>
      <version>0.34</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- https://mvnrepository.com/artifact/net.alchim31.maven/yuicompressor-maven-plugin -->
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>yuicompressor-maven-plugin</artifactId>
        <version>1.5.1</version>
        <executions>
          <execution>
            <phase>prepare-package</phase>
            <goals>
              <goal>compress</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <includes>
            <include>**/*.js</include>
            <include>**/*.css</include>
          </includes>
          <encoding>UTF-8</encoding>
          <jswarn>false</jswarn>
          <suffix>.min</suffix>
          <preProcessAggregates>true</preProcessAggregates>
          <aggregations>
            <aggregation>
              <insertNewLine>true</insertNewLine>
              <insertFileHeader>true</insertFileHeader>
              <inputDir>${basedir}/target/classes/META-INF/resources/webjars/LichKin-UI/1.0.0/plugins</inputDir>
              <output>${basedir}/target/classes/META-INF/resources/webjars/LichKin-UI/1.0.0/plugins/lichkin-plugins.js</output>
              <includes>
                <include>lichkin-plugin-core.js</include>
                <include>lichkin-plugin-icon.js</include>
                <include>lichkin-plugin-text.js</include>
                <include>lichkin-plugin-button.js</include>
                <include>lichkin-plugin-dialog.js</include>
                <include>lichkin-plugin-textbox.js</include>
                <include>lichkin-plugin-droplist.js</include>
                <include>lichkin-plugin-tree.js</include>
                <include>lichkin-plugin-datagrid.js</include>
              </includes>
            </aggregation>
          </aggregations>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>